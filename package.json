{
  "name": "techvengers-activity-tracker",
  "version": "1.0.1",
  "description": "A desktop activity tracker app with screenshot capture and break tracking.",
  "author": "Forkadul Islam <forkadulislam@gmail.com>",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "ably": "^2.8.0",
    "auto-launch": "^5.0.5",
    "dotenv": "^16.0.0",
    "electron-updater": "^6.6.2",
    "node-fetch": "^3.3.2",
    "regedit": "^5.1.4",
    "screenshot-desktop": "^1.14.0"
  },
  "devDependencies": {
    "electron": "^36.0.1",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.techvengers.activitytracker",
    "productName": "Techvenger Activity Tracker",
    "files": [
      "**/*",
      ".env"
    ],
    "win": {
      "target": "nsis",
      "icon": "appIcon.png",
      "publish": {
        "provider": "github",
        "owner": "ForkadulIslam",
        "repo": "desktop_activity_tracker_tray_icon_app"
      }
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
